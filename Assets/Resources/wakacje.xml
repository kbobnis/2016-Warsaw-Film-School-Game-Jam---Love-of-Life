<root>
	<parameters dragDownIfZeroPenalty="2">
		<param id="walletStatus" text="Pieniądze" startValue="10" maxValue="10" />
		<param id="concentration" text="Koncetracja" startValue="0.7" maxValue="1" />
		<param id="happiness" text="Szczęście" startValue="0.5" maxValue="5" isMain="true"/>
	</parameters>

	<schedule default="sleep">
		<scheduledSituation from="0" duration="7" id="sleep" isPermament="false"/>
		<scheduledSituation from="17" duration="2" id="sleep" isPermament="false"/>
	</schedule>

	<time normalSpeed="10" fasterSpeed="300">
	</time>

	<situations>

		<situation id="sleep" text="Sen">
			<change what="concentration" value="0.2" />
			<change what="happiness" value="0.1" />
		</situation>

		<situation id="goToBeach" text="Wyjście na plażę">
			<change what="concentration" value="-0.2" />
			<change what="walletStatus" value="-0.1" />
			<change what="happiness" value="0.5" />
		</situation>

		<situation id="goToLunapark" text="Wyjście na lunapark">
			<change what="concentration" value="-0.3" />
			<change what="walletStatus" value="-0.3" />
			<change what="happiness" value="0.8" />
		</situation>

	</situations>

	<plot>
		<plotElement text="Chcę się super bawić na wakacjach!">
			<goal paramId="happiness" value="0.7" />
		</plotElement>
	</plot>

</root>