<root>
	<parameters dragDownIfZeroPenalty="2">
		<param id="planesCount" text="Liczba samolotów" startValue="0" maxValue="1" round="true" />
		<param id="materialsCount" text="liczba materiałów" startValue="0" maxValue="1" round="true"/>
		<param id="walletStatus" text="zasobność portfela" startValue="0.5" maxValue="1" dragDownIfZero="planesCount,materialsCount,fridgeStatus,happiness" />
		<param id="fridgeStatus" text="zapełnienie lodówki" startValue="0.8" maxValue="1" dragDownIfZero="concentration,happiness,walletStatus"/>
		<param id="concentration" text="koncetracja" startValue="1" maxValue="1" dragDownIfZero="businessCompetence,constructionSkills"/>
		<param id="rent" text="czynsz" startValue="0.05" dragDownIfZero="planesCount,materialsCount" />
		<param id="constructionSkills" text="technika składania" startValue="0.1" maxValue="1" />
		<param id="businessCompetence" text="kompetencje biznesowe" startValue="0.1" maxValue="1"/>
		<param id="happiness" text="szczęście" startValue="0.5" maxValue="1" zeroEndsGame="true"/>
		<param id="salary" text="wynagrodzenie" startValue="0.25" maxValue="1" />
	</parameters>

	<time normalSpeed="10" fasterSpeed="300">
		<change what="walletStatus" value="-0.01 * rent" />
		<change what="fridgeStatus" value="-0.03" />
	</time>

	<schedule default="house">
		<scheduledSituation from="0" duration="6" id="sleep" isPermament="false"/>

		<scheduledSituation from="7" duration="1" id="shopping" isPermament="false"/>
		<scheduledSituation from="8" duration="4" id="work" isPermament="true"/>
		<scheduledSituation from="12" duration="1" id="brake" isPermament="true"/>
		<scheduledSituation from="13" duration="4" id="work" isPermament="true"/>
		<scheduledSituation from="17" duration="2" id="sleep" isPermament="false"/>
	</schedule>

	<events chance="0.1" />

	<situations>
		<!-- wasting time -->
		<situation id="house" text="Marnowanie czasu">
			<change what="concentration" value="-0.01" />
			<change what="happiness" value="0.01 * concentration" />
			<change what="fridgeStatus" value="-0.005" />
		</situation>

		<situation id="sleep" text="Sen">
			<change what="concentration" value="0.14" />
		</situation>

		<situation id="shopping" text="Zakupy">
			<change what="walletStatus" value="-0.1" />
			<change what="fridgeStatus" value="0.6"/>
			<change what="materialsCount" value="0.1"/>
			<change what="concentration" value="-0.02" />

		</situation>

		<situation id="buildingPlanes" text="Składanie samolotów">
			<change what="planesCount" value="constructionSkills * concentration"/>
			<change what="materialsCount" value="-1 * constructionSkills * 0.1"/>
			<change what="concentration" value="-0.08" />
		</situation>

		<situation id="throwingPlanes" text="Puszczanie samolotów">
			<change what="happiness" value="concentration * constructionSkills"/>
			<change what="planesCount" value="-0.01"/>

		</situation>

		<situation id="upgradeBuildingsSkills" text="Ulepszanie techniki">
			<change what="constructionSkills" value="0.02"/>
			<change what="concentration" value="-0.02" />
		</situation>

		<situation id="work" text="Praca">
			<change what="walletStatus" value="concentration * businessCompetence * salary"/>
			<change what="concentration" value="-0.12"/>
		</situation>

		<situation id="schooling" text="Nauka">
			<change what="businessCompetence" value="0.01 * concentration"/>
			<change what="concentration" value="-0.03" />
		</situation>

		<situation id="brake" text="Przerwa" selectable="false">
		</situation>

	</situations>
</root>