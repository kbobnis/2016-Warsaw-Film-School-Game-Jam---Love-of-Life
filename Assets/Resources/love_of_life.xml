<root>
	<parameters>
		<param id="planesCount" text="Liczba samolotów" />
		<param id="materialsCount" text="Liczba materiałów" />
		<param id="walletStatus" startValue="500" text="Konto"/>
		<param id="fridgeStatus" maxValue="100" text="Lodówka"/>
		<param id="concentration" startValie="0.1" maxValue="1" text="Koncentracja"/>
		<param id="freshness" maxValue="240" text="Rześkość"/>

		<param id="rent" startValue="100" text="Kwota czynszu" />
		<param id="constructionSkills" minValue="1" maxValue="100" text="Umiejetności składania samolotów"/>
		<param id="businessCompetence" startValue="0.5" maxValue="2" text="Kompetencje"/>
		<param id="happiness" startValue="10" text="Szczęście"/>
		<param id="salary" startValue="20" text="Wypłata" />
	</parameters>

	<time normalSpeed="10.0" fasterSpeed="300.0">
		<change what="walletStatus" per="720" value="-1 * rent" />
		<change what="fridgeStatus" per="24" value="-4" />
		<change what="freshness" per="0.5" value="-5"/>
	</time>

	<schedule default="house">
		<scheduledSituation from="0" duration="6" id="sleep" isPermament="false" />
		<scheduledSituation from="8" duration="4" id="work" isPermament="true" />
		<scheduledSituation from="12" duration="1" id="brake" isPermament="true" />
		<scheduledSituation from="13" duration="4" id="work" isPermament="true" />
	</schedule>

	<events chance="0.1" />

	<situations>
		<!-- wasting time -->
		<situation id="house" text="Marnowanie czasu">
			<change what="concentration" value="0.1" />
			<change what="walletStatus" value="0.1 * rent" />

			<event
				id="planeParty"
				text="Znajomi wpadli na Plane Party. Impreza była przednia!"
				maxTime="2"
				depleteText="zbarakło materiałów na zabawę. Imprezowicze rozeszli się do domów"
				interruptText="Rozsiadłeś się w fotelu"
				>
				<change what="happiness" value="0.5"/>
				<change what="happiness" maxValue="0.1"/>
				<change what="fridgeStatus" value="-5"/>
				<change what="planesCount" value="-10"/>
			</event>

			<event
				id="flood"
				chance="0.01"
				text="Z pęknietej rury leje sie woda. MOJE SAMOLOTY!"
				maxTime="4"
				canBeInterrupted="false"
			>
				<change what="planesCount" value="-10"/>
				<change what="happiness" value="-5"/>
				<change what="freshness" value="-1"/>
				<change what="walletStatus" value="-10"/>

			</event>

		</situation>

		<situation id="sleep" text="Sen">
			<change what="concentration" value="0.2" />
			<change what="freshness" value="0.1" />

			<event
				id="sweetDreams"
				text="Przyśnił ci się model doskonały"
				interruptText="Jeszcze nie czas wstawać więc idziesz spać dalej"
				maxTime="2"
			>
				<change what="happiness" value="1"/>
			</event>
		</situation>

		<situation id="shopping" text="Zakupy">
			<change what="walletStatus" value="-10" />
			<change what="fridgeStatus" value="10"/>
			<change what="materialsCount" value="10"/>
			<change what="concentration" value="-0.2" />
			<change what="freshness" value="-0.1" />
			<event
				id="sale"
				text="Trafiasz na przeceny. Wielka Encyklopiedia Samolotów wygląda bardzo interesująco."
				interruptText="O, tego mi było trzeba."
				maxTime="0.5"
			>
				<change what="constructionSkills" value="2"/>
			</event>

			<event
				id="lotteryWin"
				text="Jednak warto było wydać 5zł na los"
				interruptText="Reszta na Klub Młodego Lotnika"
				maxTime="2"
			>
				<change what="walletStatus" value="100"/>
				<change what="happiness" value="0.5"/>
			</event>

			<event
				id="Lotto"
				chance="0.0000007"
				text="Hurra! Trafiasz szóstkę w totolotka!"
				interruptText="A po co mi te pieniądze? Liczą się tylko samoloty!"
				maxTime="1"
			>
				<change what="walletStatus" value="2000000"/>
				<change what="happiness" value="20"/>
			</event>

			<event
				id="lotteryLose"
				text="Niestety, tym razem nie udało się wygrać..."
				maxTime="0.25"
				canBeInterrupted="false"
			>
				<change what="walletStatus" value="-20"/>
				<change what="happiness" value="-8"/>

			</event>

		</situation>

		<situation id="buildingPlanes" text="Składanie samolotów">
			<change what="planesCount" value="constructionSkills * 0.1 + 10"/>
			<change what="materialsCount" value="-10"/>
			<change what="concentration" value="-0.2" />
			<change what="freshness" value="-0.1" />

			<event
				id="interruption"
				text="Sąsiedzi postanowili urządzić dyskotękę i nie możesz się skupić"
				canBeInterrupted="false"
				maxTime="2"
			>
				<change what="happiness" value="-15"/>
				<change what="materialsCount" value="-5"/>
				<change what="freshness" value="-2"/>
				<change what="concentration" value="-2"/>

			</event>

		</situation>

		<situation id="throwingPlanes" text="Puszczanie samolotów">
			<change what="happiness" value="constructionSkills * 0.1 + 10"/>
			<change what="freshness" value="-0.1"/>
		</situation>

		<situation id="upgradeBuildingsSkills" text="Ulepszanie techniki">
			<change what="constructionSkills" value="0.5"/>
			<change what="freshness" value="-0.3"/>
			<change what="fridgeStatus" value="-5"/>
			<event
				id="idea"
				text="Wczorajszy film podsunął Ci pewien pomysł..."
				interruptText="Nie, to jednak nie to."
				maxTime="1"
				>
				<change what="constructionSkills" value="1"/>
				<change what="happiness" value="1"/>
			</event>
				
		</situation>

		<situation id="work" text="Praca">
			<change what="walletStatus" value="businessCompetence * concentration * salary"/>
			<change what="concentration" value="-0.2" >
			</change>
			<change what="freshness" value="-5" />
		
			<event
				id="rise"
				text="Szykuje się podwyżka, szef docenił Twoją pracę."
				maxTime="1"
				canBeInterrupted="false"
				>
				<change what="salary" value="businessCompetence * concetration * salary" />
				<change what="happiness" value="1" />
			</event>
			
			<event
				id="efficiency"
				text="Całonocne składanie modeli to jednak nie był dobry pomysł..."
				maxTime="2"
				canBeInterrupted="false"
				>
				<change what="happiness" value="-2"/>
				<change what="walletStatus" value="-1 * buznesCompetence * concetration * salary" />
				<change what="freshness" value="5"/>
			
			</event>
		
		</situation>

		<situation id="schooling" text="Nauka">
			<change what="businessCompetence" value="0.01"/>
			<change what="freshness" value="-1"/>
			<event
				id="hookey"
				text="Dzisiaj lepiej iść na piwo niż na zajęcia"
				interruptText="Pora wracać na zajęcia"
				maxTime="1"
				>
				<change what="businessCompetence" value="-0.01"/>
				<change what="walletStatus" value="-10"/>				
			
			</event>
		</situation>

		<situation id="brake" text="Przerwa" selectable="false">
			<event
				id="paperHunt"
				text="Widzisz ryzę papieru. Dzisiejszy wieczór będzie pracowity..."
				interruptText="Chyba ktoś idzie."
				maxTime="1"
			>
				<change what="materialsCount" value="10"/>
			</event>

		</situation>

	</situations>
</root>