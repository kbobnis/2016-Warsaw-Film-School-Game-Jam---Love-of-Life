<root>
	<parameters>
		<param id="planesCount" text="Liczba samolotów" round="true"/>
		<param id="materialsCount" text="liczba materiałów" round="true"/>
		<param id="walletStatus" text="zasobność portfela" startValue="500"/>
		<param id="fridgeStatus" text="zapełnienie lodówki" maxValue="100" />
		<param id="concentration" text="koncetracja" startValie="0.1" maxValue="1"/>
		<param id="freshness" text="rześkość" maxValue="240"/>
		<param id="rent" text="czynsz" startValue="100" />
		<param id="constructionSkills" text="technika składania" minValue="1" maxValue="100"/>
		<param id="businessCompetence" text="kompetencje biznesowe" startValue="0.5" maxValue="2"/>
		<param id="happiness" text="szczęście" startValue="10"/>
		<param id="salary" text="wynagrodzenie" startValue="20"/>
	</parameters>

	<time normalSpeed="10" fasterSpeed="300">
		<change what="walletStatus" per="720" value="-1 * rent" />
		<change what="fridgeStatus" per="24" value="-4" />
		<change what="freshness" per="0.5" value="-5"/>
	</time>

	<schedule default="house">
		<scheduledSituation from="0" duration="6" id="sleep" isPermament="false"/>
		<scheduledSituation from="6" duration="2" id="upgradeBuildingsSkills" isPermament="false"/>
		<scheduledSituation from="8" duration="4" id="work" isPermament="true"/>
		<scheduledSituation from="12" duration="1" id="brake" isPermament="true"/>
		<scheduledSituation from="13" duration="4" id="work" isPermament="true"/>
		<scheduledSituation from="17" duration="2" id="throwingPlanes" isPermament="false"/>
		<scheduledSituation from="19" duration="2" id="schooling" isPermament="false"/>
		<scheduledSituation from="21" duration="2" id="upgradeBuildingsSkills" isPermament="false"/>
		<scheduledSituation from="23" duration="1" id="buildingPlanes" isPermament="false"/>
	</schedule>

	<events chance="0.1" />

	<situations>
		<!-- wasting time -->
		<situation id="house" text="Marnowanie czasu">
			<change what="concentration" value="0.1" />
			<change what="walletStatus" value="0.1 * rent" />

			<event
				id="planeParty"
				text="Znajomi wpadli na Plane Party. Impreza była przednia!"
				maxTime="2"
				depleteText="zbarakło materiałów na zabawę. Imprezowicze rozeszli się do domów."
				interruptText="Rozsiadłeś się w fotelu."
				>
				<change what="happiness" value="0.5"/>
				<change what="happiness" maxValue="0.1"/>
				<change what="fridgeStatus" value="-5"/>
				<change what="planesCount" value="-10"/>
			</event>

			<event
				id="flood"
				chance="0.01"
				text="Z pęknietej rury leje sie woda. MOJE SAMOLOTY!"
				maxTime="4"
				canBeInterrupted="false"
			>
				<change what="planesCount" value="-10"/>
				<change what="happiness" value="-5"/>
				<change what="freshness" value="-1"/>
				<change what="walletStatus" value="-10"/>

			</event>

		</situation>

		<situation id="sleep" text="Sen">
			<change what="concentration" value="0.1" />
			<change what="freshness" value="40" />

			<event
				id="sweetDreams"
				text="Przyśnił ci się model doskonały"
				interruptText="Jeszcze nie czas wstawać więc idziesz spać dalej"
				maxTime="2"
			>
				<change what="happiness" value="1"/>
			</event>
			<event
				id="nightmares"
				chance="0.05"
				text="Nie podchodź z ogniem do tych samolotów, nie zbliżaj się! NIEEEEE!"
				interruptText="UFF, na szczęścieto tylko zły sen."
				maxTime="3"
				>
				<change what="freshness" value="-40"/>
			
			</event>
		</situation>

		<situation id="shopping" text="Zakupy">
			<change what="walletStatus" value="-10" />
			<change what="fridgeStatus" value="10"/>
			<change what="materialsCount" value="10"/>
			<change what="concentration" value="-0.2" />
			<change what="freshness" value="-0.1" />
			<event
				id="sale"
				text="Trafiasz na przeceny. Wielka Encyklopiedia Samolotów wygląda bardzo interesująco."
				interruptText="O, tego mi było trzeba."
				maxTime="0.5"
			>
				<change what="constructionSkills" value="2"/>
			</event>
			<event
				id="lotteryWin"
				text="Jednak warto było wydać 5zł na los"
				interruptText="Reszta na Klub Młodego Lotnika"
				maxTime="2"
			>
				<change what="walletStatus" value="100"/>
				<change what="happiness" value="0.5"/>
			</event>
			<event
				id="Lotto"
				chance="0.0000007"
				text="Hurra! Trafiasz szóstkę w totolotka!"
				interruptText="A po co mi te pieniądze? Liczą się tylko samoloty!"
				maxTime="1"
			>
				<change what="walletStatus" value="2000000"/>
				<change what="happiness" value="20"/>
			</event>
			<event
				id="lotteryLose"
				text="Niestety, tym razem nie udało się wygrać..."
				maxTime="0.25"
				canBeInterrupted="false"
			>
				<change what="walletStatus" value="-20"/>
				<change what="happiness" value="-8"/>

			</event>

		</situation>

		<situation id="buildingPlanes" text="Składanie samolotów">
			<change what="planesCount" value="constructionSkills * 0.1 + 10 * concentration"/>
			<change what="materialsCount" value="constuctionSkills * 0.1 + -10"/>
			<change what="concentration" value="-0.02" />
			<change what="freshness" value="-0.1" />

			<event
				id="interruption"
				text="Sąsiedzi postanowili urządzić dyskotękę i nie możesz się skupić"
				canBeInterrupted="false"
				maxTime="2"
			>
				<change what="happiness" value="-15"/>
				<change what="materialsCount" value="-5"/>
				<change what="freshness" value="-2"/>
				<change what="concentration" value="-2"/>

			</event>
			<event
				id="stayingAwake"
				text="Czuję, że dziś jest dobry dzień na składanie modeli."
				interruptText="Ale to było dobre."
				maxTime="1"
				>
				<change what="planesCount" value="10"/>
				<change what="materialsCount" value="10"/>
			</event>
			<event 
				id="event"
				text="Czyżby zlot amatorów lotnictwa?"
				interruptText="Ale nie taki, tylko papier się liczy!"
				maxTime="2"
				>
				<change what="constructionSkills" value="1"/>
			
			</event>

		</situation>

		<situation id="throwingPlanes" text="Puszczanie samolotów">
			<change what="happiness" value="constructionSkills * 0.1 + 10"/>
			<change what="freshness" value="-12"/>
			<change what="planesCount" value="-20"/>
			<event
				id="record"
				text="Tak, tak, TAK! JEST REKORD!!"
				interruptText="Dzień można uznać za szczególnie udany"
				maxTime="0.5"
				>
				<change what="happiness" value="10"/>
				<change what="freshness" value="0.1"/>
			</event>
			<event
				id="money"
				text="A co to tam leży?"
				interruptText="Nie, samoloty są najważniejsze."
				maxTime="0.5"
				>
				<change what="walletStatus" value="10"/>
				<change what="happiness" value="1"/>
			</event>
			<event
				id="passion"
				text="Dołączają do Ciebie kolejni oblatywacze. Puszczanie samolotów jest fajne!"
				interruptText="Potrzeba więcej czasu na samoloty!"
				maxTime="2"
				>
				<change what="happiness"  value="10"/>
			<change what="freshness" value="12"/>
			</event>
			<event
				id="raining"
				text="O, w deszczu jeszcze nikt nie puszczał samolotów."
				interruptText="Pora zbierać zabawki i iść do domu."
				depleateText="Mokre, wszystkie przemoczone."
				maxTime="2"
				>
				<change what="planesCount" value="-10"/>
				<change what="freshness" value="12"/>
			</event>
			<event
				id="windy"
				text="Ale wieje, ciekawe czy dziś padnie rekord?"
				interruptText="Ej, ale tej czapki to ja potrzebuję!"
				depleatedText="Gdzie moje samoloty?"
				maxTime="2"
				>
				<change what="happiness" value="5"/>
				<change what="planesCount" value="-8"/>
				<change what="freshness" value="-6"/>s
			</event>
			<event
				id="authority"
				text="&quot;Tutaj nie wolno śmiecić!&quot;"
				interruptText="To nie są śmieci, to są samoloty!"
				maxTime="1"
				>
				<change what="happiness" value="-10"/>
			</event>
		</situation>

		<situation id="upgradeBuildingsSkills" text="Ulepszanie techniki">
			<change what="constructionSkills" value="0.5"/>
			<change what="freshness" value="-0.3"/>
			<change what="fridgeStatus" value="-5"/>
			<event
				id="idea"
				text="Wczorajszy film podsunął Ci pewien pomysł..."
				interruptText="Nie, to jednak nie to."
				maxTime="1"
				>
				<change what="constructionSkills" value="1"/>
				<change what="happiness" value="1"/>
			</event>
			<event
				id="badLuck"
				text="Nie, nie, nie! Te schematy są do niczego!"
				interruptText="DOŚĆ! ten papier jest zbyt cenny."
				maxTime="2"
				>
				<change what="planesCount" value="-5"/>
				<change what="materialsCount" value="-5"/>
			</event>
				
		</situation>

		<situation id="work" text="Praca">
			<change what="walletStatus" value="businessCompetence * concentration * salary"/>
			<change what="concentration" value="-0.2"/>
			<change what="freshness" value="-5" />
		
			<event
				id="rise"
				text="Szykuje się podwyżka, szef docenił Twoją pracę."
				maxTime="1"
				canBeInterrupted="false"
				>
				<change what="salary" value="businessCompetence * concetration * salary" />
				<change what="happiness" value="1" />
			</event>
			<event
				id="sleepinees"
				text="Całonocne składanie modeli to jednak nie był dobry pomysł..."
				maxTime="2"
				canBeInterrupted="false"
				>
				<change what="happiness" value="-2"/>
				<change what="walletStatus" value="-1 * buznesCompetence * concetration * salary" />
				<change what="freshness" value="5"/>
			
			</event>
			<event
				id="gift"
				text="Niespodziewany prezent, czyżby nowy schemat samolotu?"
				canBeInterrupted="false"
				maxTime="0.5"
				>
				<change what="planesCount" value="10"/>
				<change what="materialsCount" value="10"/>
				<change what="happiness" value="10"/>
			</event>
		
		</situation>

		<situation id="schooling" text="Nauka">
			<change what="businessCompetence" value="0.01"/>
			<change what="freshness" value="-1"/>
			<event
				id="hookey"
				text="Dzisiaj lepiej iść na piwo niż na zajęcia"
				interruptText="Pora wracać na zajęcia"
				maxTime="1"
				>
				<change what="businessCompetence" value="-0.01"/>
				<change what="walletStatus" value="-10"/>				
			
			</event>
			<event
				id="heat"
				chance="0.03"
				text="Ale gorąco... i duszno..."
				canBeInterrupted="false"
				maxTime="1"
				>
				<change what="concentration" value="-0.1"/>
				<change what="freshness" value="-24"/>
			</event>
			<event
				id="comfort"
				text="Dziś wyjątkowo dobrze mi idzie. wiedz sama wchodzi do głowy."
				interruptText="Nie! Co ja zrobiłem? Weno, wracaj!"
				maxTime="1"
				>
				<change what="businessCompetence" value="0.01"/>
			</event>
			<event
				id="moneyLuck"
				text="O, pienądze"
				interruptText="Pora wracać na zajęcia"
				maxTime="0.5"
				>
				<change what="walletStatus" value="50"/>
				<change what="happiness" value="5"/>
			</event>
			<event
				id="knowledgeLuck"
				text="A to co? Czyżbynajnowszy numer Młodego Lotnika?"
				interruptText="Pora wracać na zajęcia"
				maxTime="0.5"
				>
				<change what="businessCompetence" value="0.08"/>
				<change what="happiness" value="5"/>
			</event>
		</situation>

		<situation id="brake" text="Przerwa" selectable="false">
			<event
				id="paperHunt"
				text="Widzisz ryzę papieru. Dzisiejszy wieczór będzie pracowity..."
				interruptText="Chyba ktoś idzie."
				maxTime="1"
			>
				<change what="materialsCount" value="10"/>
			</event>

		</situation>

	</situations>
</root>